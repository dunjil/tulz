# ============================================================
# ToolHub Production Environment Configuration
# ============================================================

# Application
APP_NAME=ToolHub
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Server
HOST=0.0.0.0
PORT=8000
ALLOWED_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://toolhub:YOUR_DB_PASSWORD@localhost:5432/toolhub
DATABASE_URL_SYNC=postgresql://toolhub:YOUR_DB_PASSWORD@localhost:5432/toolhub

# JWT Authentication (Generate with: openssl rand -base64 64)
SECRET_KEY=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_AT_LEAST_64_CHARACTERS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/v1/auth/google/callback

# ZeptoMail (Zoho)
ZEPTOMAIL_API_KEY=your-zeptomail-api-key
ZEPTOMAIL_FROM_EMAIL=noreply@yourdomain.com
ZEPTOMAIL_FROM_NAME=ToolHub

# Polar.sh
POLAR_ACCESS_TOKEN=polar_at_your-polar-access-token
POLAR_WEBHOOK_SECRET=whsec_your-polar-webhook-secret
POLAR_PRODUCT_ID=your-polar-product-id-for-pro-subscription
POLAR_ORGANIZATION_ID=your-polar-organization-id
POLAR_SANDBOX=false

# File Upload
MAX_FILE_SIZE_MB=50
TEMP_FILE_DIR=/tmp/toolhub
TEMP_FILE_TTL_HOURS=1

# Rate Limiting
FREE_DAILY_USES=3
RATE_LIMIT_PER_MINUTE=30

# Pricing (in cents)
PRICE_PRO_MONTHLY_USD=1000
PRICE_PRO_ANNUAL_USD=9600

# Redis & Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# OCR (Tesseract)
TESSERACT_CMD=/usr/bin/tesseract

# ============================================================
# Frontend Environment (.env.local)
# ============================================================
# NEXT_PUBLIC_API_URL=https://yourdomain.com
# NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
