# ============================================================
# Tulz Production Environment Configuration
# ============================================================

# Application
APP_NAME=Tulz
DEBUG=false
ENVIRONMENT=production

# Server
HOST=0.0.0.0
PORT=8000
ALLOWED_ORIGINS=["https://tulz.tools","https://www.tulz.tools"]

# Database
DATABASE_URL=postgresql+asyncpg://toolhub:CHOOSE_A_SAFE_PASSWORD@localhost:5432/toolhub
DATABASE_URL_SYNC=postgresql://toolhub:CHOOSE_A_SAFE_PASSWORD@localhost:5432/toolhub

# JWT Authentication
SECRET_KEY=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_AT_LEAST_64_CHARACTERS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
REFRESH_TOKEN_EXPIRE_DAYS=7

# ZeptoMail (Zoho)
ZEPTOMAIL_API_KEY=your-zeptomail-api-key
ZEPTOMAIL_FROM_EMAIL=noreply@tulz.tools
ZEPTOMAIL_FROM_NAME=Tulz

# File Upload
MAX_FILE_SIZE_MB=50
TEMP_FILE_DIR=/tmp/toolhub
TEMP_FILE_TTL_HOURS=1

# Rate Limiting
FREE_DAILY_USES=3
RATE_LIMIT_PER_MINUTE=30

# ============================================================
# Frontend Environment (.env.local)
# ============================================================
NEXT_PUBLIC_API_URL=https://tulz.tools
